<header class="bg-white shadow-sm border-b border-border-gray sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-playfair font-bold text-dark-gray hover:text-primary transition-colors">
          The Reluctant Winner
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-dark-gray hover:text-primary px-3 py-2 text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/blog" class="text-dark-gray hover:text-primary px-3 py-2 text-sm font-medium transition-colors">
            Blog
          </a>
          <a href="/assessment" class="text-dark-gray hover:text-primary px-3 py-2 text-sm font-medium transition-colors">
            Assessment
          </a>
          <a href="/about" class="text-dark-gray hover:text-primary px-3 py-2 text-sm font-medium transition-colors">
            About
          </a>
          <a href="/disclaimer" class="text-dark-gray hover:text-primary px-3 py-2 text-sm font-medium transition-colors">
            Disclaimer
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-dark-gray hover:text-primary focus:outline-none focus:text-primary transition-colors" id="mobile-menu-button">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-border-gray">
        <a href="/" class="text-dark-gray hover:text-primary block px-3 py-2 text-base font-medium transition-colors">
          Home
        </a>
        <a href="/blog" class="text-dark-gray hover:text-primary block px-3 py-2 text-base font-medium transition-colors">
          Blog
        </a>
        <a href="/assessment" class="text-dark-gray hover:text-primary block px-3 py-2 text-base font-medium transition-colors">
          Assessment
        </a>
        <a href="/about" class="text-dark-gray hover:text-primary block px-3 py-2 text-base font-medium transition-colors">
          About
        </a>
        <a href="/disclaimer" class="text-dark-gray hover:text-primary block px-3 py-2 text-base font-medium transition-colors">
          Disclaimer
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>